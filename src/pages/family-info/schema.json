{
	"type": "object",
	"title": "Editar responsable",
	"properties": {
		"role": {
			"oneOf": [
				{
					"const": "mother",
					"title": "Madre"
				},
				{
					"const": "father",
					"title": "Padre"
				},
				{
					"const": "guardian",
					"title": "Tutor"
				}
			],
			"type": "string",
			"title": "Tipo de responsable",
			"default": "mother"
		},
		"full_name": {
			"type": "string",
			"title": "Nombre completo"
		},
		"birthdate": {
			"type": "string",
			"dateFormat": "DD/MM/YYYY",
			"title": "Fecha de nacimiento"
		},
		"birthplace": {
			"type": "string",
			"title": "País de nacimiento"
		},
		"nationality": {
			"type": "string",
			"title": "Nacionalidad"
		},
		"first_language": {
			"type": "string",
			"title": "Lengua materna"
		},
		"ci": {
			"type": "integer",
			"title": "Cedula de identidad",
			"minimum": 0
		},
		"marital_status": {
			"oneOf": [
				{
					"const": "single",
					"title": "Soltero/a"
				},
				{
					"const": "married",
					"title": "Casado/a"
				},
				{
					"const": "widow",
					"title": "Viudo/a"
				}
			],
			"type": "string",
			"title": "Estado civil",
			"default": "single"
		},
		"cellphone": {
			"type": "string",
			"title": "Teléfono celular",
			"pattern": "\\d{9}"
		},
		"email": {
			"type": "string",
			"title": "E-mail"
		},
		"address": {
			"type": "string",
			"title": "Dirección"
		},
		"neighbourhood": {
			"type": "string",
			"title": "Barrio de residencia"
		},
		"education_level": {
			"oneOf": [
				{
					"const": "none",
					"title": "Ninguno"
				},
				{
					"const": "school",
					"title": "Primaria"
				},
				{
					"const": "highSchool",
					"title": "Secundaria"
				},
				{
					"const": "tertiary",
					"title": "Terciario"
				}
			],
			"title": "Nivel educativo",
			"default": "none"
		},
		"occupation": {
			"type": "string",
			"title": "Trabajo-Ocupación"
		},
		"workplace": {
			"type": "string",
			"title": "Empresa de trabajo"
		},
		"workplace_address": {
			"type": "string",
			"title": "Dirección laboral"
		},
		"workplace_neighbourhood": {
			"type": "string",
			"title": "Barrio laboral"
		},
		"workplace_phone": {
			"type": "number",
			"title": "Teléfono laboral",
			"pattern": "\\d{8,9}"
		}
	},
	"required": ["role", "ci"]
}
