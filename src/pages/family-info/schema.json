{
	"type": "object",
	"title": "Editar responsable",
	"properties": {
		"role": {
			"oneOf": [
				{
					"const": "mother",
					"title": "Madre"
				},
				{
					"const": "father",
					"title": "Padre"
				},
				{
					"const": "guardian",
					"title": "Tutor"
				}
			],
			"type": "string",
			"title": "Tipo de responsable",
			"default": "mother"
		},
		"fullName": {
			"type": "string",
			"title": "Nombre completo"
		},
		"birthDate": {
			"type": "string",
			"format": "date",
			"dateTimeFormat": "DD/MM/YY",
			"dateTimeSaveFormat": "DD-MM-YY",
			"title": "Fecha de nacimiento"
		},
		"birthCountry": {
			"type": "string",
			"title": "País de nacimiento"
		},
		"nationality": {
			"type": "string",
			"title": "Nacionalidad"
		},
		"motherToungue": {
			"type": "string",
			"title": "Lengua materna"
		},
		"ci": {
			"type": "string",
			"title": "Cedula de identidad",
			"pattern": "\\d(\\.\\d{3}){2}-\\d"
		},
		"maritalStatus": {
			"oneOf": [
				{
					"const": "single",
					"title": "Soltero/a"
				},
				{
					"const": "married",
					"title": "Casado/a"
				},
				{
					"const": "widow",
					"title": "Viudo/a"
				}
			],
			"type": "string",
			"title": "Estado civil",
			"default": "single"
		},
		"cellphone": {
			"type": "string",
			"title": "Teléfono celular",
			"pattern": "\\d{9}"
		},
		"email": {
			"type": "string",
			"title": "E-mail"
		},
		"address": {
			"type": "string",
			"title": "Dirección"
		},
		"residenceNeighborhood": {
			"type": "string",
			"title": "Barrio de residencia"
		},
		"educationLevel": {
			"oneOf": [
				{
					"const": "none",
					"title": "Ninguno"
				},
				{
					"const": "school",
					"title": "Primaria"
				},
				{
					"const": "highSchool",
					"title": "Secundaria"
				},
				{
					"const": "tertiary",
					"title": "Terciario"
				}
			],
			"title": "Nivel educativo",
			"default": "none"
		},
		"occupation": {
			"type": "string",
			"title": "Trabajo-Ocupación"
		},
		"workplace": {
			"type": "string",
			"title": "Empresa de trabajo"
		},
		"workplaceAddress": {
			"type": "string",
			"title": "Dirección laboral"
		},
		"workplaceNeighborhood": {
			"type": "string",
			"title": "Barrio laboral"
		},
		"workplacePhone": {
			"type": "number",
			"title": "Teléfono laboral",
			"pattern": "\\d{8,9}"
		}
	},
	"required": ["type", "ci"]
}
