{
	"type": "object",
	"properties": {
		"email": {
			"type": "string",
			"title": "Correo electrónico",
			"format": "email",
			"pattern": "^\\S+@\\S+\\.\\S+$",
		  	"minLength": 6,
			"maxLength": 127,
			"errorMessage": "Email incorrecto."
		},
		"password": {
		  "type": "string",
		  "title": "Contraseña",
		  "format": "password",
		  "minLength": 6,
		  "maxLength": 127,
		  "errorMessage": {
			"minLength": "Este campo debe tener como mínimo 6 caracteres."
		  }
		},
		"name": {
			"type": "string",
			"title": "Nombre",
			"maxLength": 127
		},
		"surname": {
			"type": "string",
			"title": "Apellido",
			"maxLength": 127
		},
		"birthdate": {
			"type": "string",
			"title": "Fecha de nacimiento"
		},
		"ci": {
			"type": "string",
		  	"pattern": "^((\\d+)|([a-zA-Z]+))+$",
			"title": "Cédula de identidad",
			"errorMessage": {
			  "pattern": "Se deben ingresar solo números y letras."
			}
		},
		"phone": {
			"type": "string",
		  	"pattern": "\\d{9}|\\d{8}",
			"title": "Teléfono",
			"errorMessage": {
			  "pattern": "Se deben ingresar 8 o 9 dígitos."
			}
		},
		"address": {
			"type": "string",
			"title": "Dirección"
		},
		"role": {
			"oneOf": [
			  {
				"const": "system_admin",
				"title": "Administrador del sistema"
			  },
			  {
				"const": "administrative",
				"title": "Administrativo"
			  },
			  {
				"const": "associate",
				"title": "Adscripto"
			  },
			  {
				"const": "principal",
				"title": "Director"
			  },
			  {
				"const": "teacher",
				"title": "Docente"
			  },
			  {
				"const": "receptionist",
				"title": "Recepcionista"
			  }
			],
			"title": "Rol",
			"type": "string"
		}
	},
	"required": ["email", "password", "name", "surname", "role"]
}
